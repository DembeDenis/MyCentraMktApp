<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

    </ListView>


    <RelativeLayout
        android:id="@+id/fruitsmain" android:layout_toEndOf="@+id/list"
        android:layout_width="wrap_content" android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list">

        <include
            android:id="@+id/fruitslayout"
            layout="@layout/fragment_fruits">

        </include>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clothesmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/list"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/list">

        <include layout="@layout/fragment_food" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/list"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/list">

        <include layout="@layout/fragment_fruits" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/list"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/list">

        <include layout="@layout/fragment_at" />
    </RelativeLayout>

</RelativeLayout>
